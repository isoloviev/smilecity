extends layout

block content

    div(class="top-block")

        div(class="menu-block")

            ul
                if (loggedUser)
                    li
                        a(class="btn btn-default btn-xs upload-smile-popup-link",href="/profile.html")
                            i(class="glyphicon glyphicon-user")
                            span= loggedUser.email

                li
                    a(class="btn btn-default btn-xs upload-smile-popup-link",href="/upload.html")
                        i(class="glyphicon glyphicon-upload")
                        span Give us your smile!

                li
                    if (loggedUser)
                        a(class="btn btn-default btn-xs",href="/logout.html")
                            i(class="glyphicon glyphicon-log-out")
                            span Logout
                    else
                        a(class="btn btn-default btn-xs upload-smile-popup-link",href="/login.html")
                            i(class="glyphicon glyphicon-log-in")
                            span Login

        div(class="logo-block")
            h1 SmileCity

        .clearfix

    div#smiles.clearfix

